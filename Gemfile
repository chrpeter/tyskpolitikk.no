gem 'devise'
# Use Unicorn as the app server
# gem 'unicorn'

# Use Capistrano for deployment
# gem 'capistrano-rails', group: :development
gem 'font-awesome-sass', '~> 4.6.2'

#AWS conn
gem "fog-aws"

# File uploading and image handling
